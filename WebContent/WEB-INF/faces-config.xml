<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">

	<application>
		<!-- tell JSF to use Facelets -->
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>

	<!-- Registro dos manageds beans -->
	<managed-bean>
        <managed-bean-name>usuarioBean</managed-bean-name>
        <managed-bean-class>br.faculdadeidez.psa.beans.UsuarioBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <!-- Navegação global -->
    <navigation-rule>  
        <navigation-case>  
             <from-outcome>cadastroUsuario</from-outcome>
             <to-view-id>/pages/cadastroUsuario.xhtml</to-view-id>
         </navigation-case>    
     </navigation-rule>
     <navigation-rule>  
        <navigation-case>  
             <from-outcome>adminUsuario</from-outcome>
             <to-view-id>/pages/adminUsuario.xhtml</to-view-id>
         </navigation-case>    
     </navigation-rule>
	

</faces-config>
