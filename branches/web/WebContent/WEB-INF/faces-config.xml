<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">
	<application>
		<!-- tell JSF to use Facelets -->
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>
	<application>
		<locale-config>
			<default-locale>br</default-locale>
		</locale-config>
		<message-bundle>br.faculdadeidez.psa.apresentacao.bundle.messages</message-bundle>
		<resource-bundle>
			<base-name>br.faculdadeidez.psa.apresentacao.bundle.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<!-- Registro dos manageds beans -->
	<managed-bean>
		<managed-bean-name>usuarioBean</managed-bean-name>
		<managed-bean-class>
			br.faculdadeidez.psa.apresentacao.managedbean.UsuarioBean 
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>setorBean</managed-bean-name>
		<managed-bean-class>
			br.faculdadeidez.psa.apresentacao.managedbean.SetorBean 
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viaturaBean</managed-bean-name>
		<managed-bean-class>
			br.faculdadeidez.psa.apresentacao.managedbean.ViaturaBean 
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sessaoBean</managed-bean-name>
		<managed-bean-class>
			br.faculdadeidez.psa.apresentacao.managedbean.SessaoBean 
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<!-- Navegação global -->
	<lifecycle>
		<phase-listener>br.faculdadeidez.psa.apresentacao.servlets.GerenciadorAutorizacao</phase-listener>
	</lifecycle>
	<navigation-rule>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/inicio.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>cadastroUsuario</from-outcome>
			<to-view-id>/pages/cadastroUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>logado</from-outcome>
			<to-view-id>/pages/mapa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>adminUsuario</from-outcome>
			<to-view-id>/pages/adminUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- setor  -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>cadastroSetor</from-outcome>
			<to-view-id>/pages/cadastroSetor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>adminSetor</from-outcome>
			<to-view-id>/pages/adminSetor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- /setor -->

	<!-- viatura  -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>cadastroViatura</from-outcome>
			<to-view-id>/pages/cadastroViatura.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>adminViatura</from-outcome>
			<to-view-id>/pages/adminViatura.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- /viatura -->
	
	<!-- Navegação especializada -->
	
	
	<navigation-rule>
		<from-view-id>/pages/cadastroSetor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>inserido</from-outcome>
			<to-view-id>/pages/adminSetor.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/pages/cadastroUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>inserido</from-outcome>
			<to-view-id>/pages/adminUsuario.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/pages/cadastroViatura.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>inserido</from-outcome>
			<to-view-id>/pages/adminViatura.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	
</faces-config>